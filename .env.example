# Server Configuration
PORT=3000
NODE_ENV=development

# Stripe Webhook Configuration (Required)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe API Key (Optional - not needed for webhook verification)
# STRIPE_API_KEY=sk_test_your_api_key_here

# Status Page URLs (Optional - will use fixtures if not provided)
# SPREEDLY_STATUS_SUMMARY_URL=https://status.spreedly.com/api/v2/summary.json
# BRAZE_STATUS_SUMMARY_URL=https://status.braze.com/api/v2/summary.json

# Routing Configuration
# Set to 'true' to route warning-level events to PagerDuty (default: false)
ROUTE_WARNING=false

# Logging Configuration
LOG_LEVEL=info
